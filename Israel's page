        <script>
          document.getElementById('thisButton').onclick = function()
          {
            var l = document.getElementById("initial").value;
            console.log("value of number input is " + l);
            var a = document.getElementById("name").value;
            console.log("you wrote - ");
            document.getElementById('output').innerhtml = "you just typed: <strong> " + l + a + "</strong>";
          }
          function navigate(); //move user to classmates pages
          {
            var y = document.getElementById('initial').value;
            console.log("y == " + y);

            if(y > 0 && y < 20)
            {
              window.location.href = "Andys.html"; //Andyspage

            }
            else if(y > 21 && < 40) {
              window.location.href = "Andrews.html"; //Andrewspage
              else if(y > 41 && < 60) {
              window.location.href = "Laurencespage" //
              }
              else {
              document.getElementById('warning').innerhtml = "You didn't meet the restrictions: y should between 0 - 60";
              alert("You didn't meet the restrictions: y should between 1 and 59");
              }

            }
          }
          </script>
